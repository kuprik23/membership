extends /src/views/base.pug

block prepend title
	- title = 'Unlink ' + app.title

block contents
	.row
		.col-md-3
			- page = 'discourse'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( title )
			p Are you sure you want to unlink your Discourse profile from your membership, you will no longer have access to private areas of Discourse.
			form( method="post" )
				+csrf
				button.btn.btn-danger Yes, Unlink
				|  
				a( href="/profile/discourse" ).btn.btn-default No
