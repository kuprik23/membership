extends /src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'tag'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( 'Replace Tag' )
			p You already have a tag associated with your account, would you like to replace it with the tag enrolled at the kiosk on #{ date }?
				form( method="post", action="/profile/enroll" )
					+csrf
					input( type="hidden", name="enrollment_code", value=code )
					input( type="hidden", name="replace", value="true" )
					p
						button( role="button" ).btn.btn-danger Yes, Replace the tag
						| 
						a( href="/profile/tag" ).btn.btn-default No
